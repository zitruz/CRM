            display: grid;
            justify-content: space-evenly;
            grid-template-columns: 1fr 1fr 1fr ;
            gap: 10px;
            grid-auto-rows: minmax(500px, auto);
        }

        .grid-item {
            text-align: center;
        }

        #foo {
            width: 100%;
            height: 70%;
            margin: 0;
            padding: 0;
        }

        #velgross {
            width: 100%;
            height: 70%;
            margin: 0;
            padding: 0;
