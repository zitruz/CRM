    <div class="grid-container">
        <div class="grid-item">
            <h2 id="tituloVel1">Total Sales</h2>
            <h3 id="cantidadVel1"></h3>
            <canvas id="foo"></canvas>
        </div>
        <div class="grid-item">
            <h2 id="titulolinear1">Opportunity to sales</h2>
            <h3 id="cantidadlinear1">44</h3>
            <div id="containerlinear1"></div>
            <h2 id="titulolinear2">Leads to opportunities</h2>
            <h3 id="cantidadlinear2"></h3>
            <div id="containerlinear2"></div>
        </div>
        <div class="grid-item">
